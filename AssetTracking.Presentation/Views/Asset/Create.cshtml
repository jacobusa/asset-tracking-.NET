@model AssetTracking.Presentation.Models.AssetModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a new Asset</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TagNumber" class="control-label">Enter the Tag Number: </label>
                <input asp-for="TagNumber" class="form-control" />
                <span asp-validation-for="TagNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetTypeId" class="control-label">Select an Asset Type: </label>
                <select id="assetTypes" style="width:150px" asp-items="ViewBag.NoIndexAssetTypes" asp-for="AssetTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label">Enter the Manufacturer: </label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Enter the Model: </label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Describe the Asset: </label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label">Enter the Serial Number: </label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <img class="diskimg img-fluid" src="~/Images/dsk_drive.jpg" />
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

